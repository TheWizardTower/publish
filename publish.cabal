build-type:          Simple

 
executable           render
  default-language:  Haskell2010

  build-depends:     base,
                     text,
                     here,
                     filepath,
                     directory,
                     pandoc-types,
                     pandoc

  ghc-options:       -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  hs-source-dirs:    src
  main-is:           render.hs
                      
 
executable           poemtabs
  default-language:  Haskell2010
  buildable:         False

  build-depends:     base,
                     pandoc-types,
                     pandoc

  ghc-options:       -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  hs-source-dirs:    src
  main-is:           PoemTabs.hs

executable           experiment
  default-language:  Haskell2010
  buildable:         True

  build-depends:     base,
                     text,
                     pandoc-types,
                     pandoc

  hs-source-dirs:    tests

  main-is:           Experiment.hs

  ghc-options:       -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

                      
